<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_search_activity_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu_action_back" />
        <EditText
            android:id="@+id/ed_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:background="@drawable/sharpe_ed_bg"
            android:drawableLeft="@drawable/icon_search"
            android:ems="10"
            android:hint=" 搜索单品"
            android:textColorHint="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_search_activity_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
   <LinearLayout
       android:background="#66b9b3b6"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:text="大家都在搜"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="25dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <RelativeLayout
           android:padding="15dp"
           android:background="#ffffff"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <android.support.v7.widget.RecyclerView
               android:id="@+id/recycler_search_centre"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="15dp"
           android:background="#ffffff"
           android:padding="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:drawableLeft="@drawable/gift_category_guide"
               android:text="使用选礼神器快速挑选礼物"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:src="@drawable/icon_right_arrow"
               android:layout_height="wrap_content" />
       </RelativeLayout>
   </LinearLayout>
</LinearLayout>
