<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.toplevel.fragment.UserFragment">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="250dp">
       <ImageView
           android:src="@drawable/bg_profile"
           android:scaleType="centerCrop"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
      <RelativeLayout
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/iv_user_message"
              android:src="@drawable/icon_message"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <ImageView
              android:id="@+id/iv_user_settings"
              android:src="@drawable/me_settings"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <ImageView
              android:id="@+id/iv_user_scan"
              android:layout_toLeftOf="@+id/iv_user_settings"
              android:layout_marginRight="36dp"
              android:src="@drawable/icon_scan"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>
       <TextView
           android:id="@+id/tv_user_icon"
           android:layout_width="wrap_content"
           android:drawableTop="@drawable/me_avatar_boy"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:textColor="#ffffff"
           android:drawablePadding="15dp"
           android:text="请登录"
           android:layout_height="wrap_content" />
   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="70dp">
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/icon_cart"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:text="购物车"
        android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_order"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="订单"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_coupon"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="礼券"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_service"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="客服"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
</LinearLayout>
