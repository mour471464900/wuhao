<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">
        <ImageView
            android:id="@+id/iv_child_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/zhangyuqi2" />
        <ImageView
            android:src="@drawable/ig_marker_fresh"
            android:layout_gravity="left|top"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_child_show"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="10sp"
           android:padding="4dp"
            android:text="  12312"
            android:background="@drawable/article_like_count_bg"
            android:drawableLeft="@drawable/ic_feed_favourite_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
</RelativeLayout>